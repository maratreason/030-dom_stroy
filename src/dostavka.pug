extends pug/base.pug

append content
  include pug/includes/header.pug

  main.main
    section.delivery
      .container
        +breadcrumbs("Главная", "Доставка")
        .delivery__inner
          .delivery__inner-content
            h1.catalog__title.title Доставка и сборка
            p.subtitle.
              Доставка осуществляется только при наличии удовлетворительных,
              для грузового автомобиля г/п 7т, подъездных путей к месту разгрузки.
          img.delivery__inner-img(src="images/delivery/1.png" alt="")

      .customer__more

      .container
        .customer__more-btn
          p.customer__more-text Узнать больше об индивидуальном строительстве
          .customer__more-round
            img.customer__more-img(src="images/icons/customers/chevron-right.svg" alt="chevron-right icon")

    section.delivery-price
      .container
        h2.delivery-price__title Стоимость доставки рассчитывается от расстояния от производства
        .delivery-price__subtitle РАСЧЕТ ДОСТАВКИ ЗА 1 МОДУЛЬ:
        ul.delivery-price__list
          li.delivery-price__item
            img.delivery-price__icon(src="images/icons/delivery/galka.svg" alt="")
            span.delivery-price__text До 50 км от производства 120 руб/км
          li.delivery-price__item
            img.delivery-price__icon(src="images/icons/delivery/galka.svg" alt="")
            span.delivery-price__text До 100 км от производства 100 ₽/км
          li.delivery-price__item
            img.delivery-price__icon(src="images/icons/delivery/galka.svg" alt="")
            span.delivery-price__text От 100 км от производства 90 ₽/км
          li.delivery-price__item
            img.delivery-price__icon(src="images/icons/delivery/plus.svg" alt="")
            span.delivery-price__text Погрузка-выгрузка 2000 ₽ (вездеход +1500 ₽)

        .delivery-price__custom
          img.delivery-price__icon(src="images/icons/delivery/multy.svg" alt="")
          span.delivery-price__text Доставка вездеходом возможна при длинне не превышающей 6м

        p.delivery-price__example ПРИМЕР: 70 км от производства = 70 км х 110₽ + 2000₽ = 9 700₽
        .delivery-price__cars
          .delivery-price__cars-inner
            img.delivery-price__cars-img(src="images/delivery/2.png" alt="")
            h3.delivery-price__cars-title ОБЫЧНЫЙ МАНИПУЛЯТОР
            ul.delivery-price__cars-list
              li.delivery-price__cars-item асфальт
              li.delivery-price__cars-item плиты
              li.delivery-price__cars-item щебеночное покрытие
          .delivery-price__cars-inner
            img.delivery-price__cars-img(src="images/delivery/3.png" alt="")
            h3.delivery-price__cars-title МАНИПУЛЯТОР-ВЕЗДЕХОД
            ul.delivery-price__cars-list
              li.delivery-price__cars-item бездорожье
              li.delivery-price__cars-item грязь
              li.delivery-price__cars-item снег

    section.delivery-map
      .container
        h2.delivery-map__title Стоимость доставки рассчитывается от расстояния от производства
        p.delivery-map__subtitle.
          Теперь любой наш клиент сможет самостоятельно определить стоимость доставки до своего участка.
          Расстояния от нашего производства до любого населенного пункта вы можете посчитать прямо здесь!

        .delivery-map__map
          .delivery-map__map-search.input-search
            input.input-search__input(type="text" placeholder="Введите адрес доставки")
            button.input-search__btn(type="button") Найти
          iframe.input-search__iframe(src="https://www.google.com/maps/embed?pb=!1m14!1m12!1m3!1d143385.9796907609!2d49.13404504293099!3d55.8382699645781!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!5e0!3m2!1sru!2sru!4v1680801918647!5m2!1sru!2sru" width="" height="" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade")

        .delivery-map__result
          .delivery-map__item Расстояние:
            span.delivery-map__item-number 723
            | км
          .delivery-map__item Стоимость:
            span.delivery-map__item-number 10 000
            | руб

    section.delivery-form
      .container
        h2.delivery-form__title
          span.bold-text Необходима сборка на участке?
          | Свяжитесь с нашим менеджером.
        p.delivery-form__subtitle.
          Оставьте заявку и наши менеджеры оперативно с Вами свяжутся и ответят на все интересующие Вас вопросы!
        .delivery-form__form
          .delivery-form__inputs
            input.input(type="text" placeholder="Ваше имя*")
            input.input(type="text" placeholder="Ваш телефон*")
            input.input(type="email" placeholder="Ваш email")
          button.btn.btn-big.btn-warning(type="submit") ОТПРАВИТЬ


  include pug/includes/footer.pug