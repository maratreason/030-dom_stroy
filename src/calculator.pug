extends pug/base.pug

append content
  include pug/includes/header.pug

  main.main
    section.calc
      .container
        .calc__inner
          +breadcrumbs("Главная", "Калькулятор")
          h1.catalog__title.title Калькулятор
          p.subtitle.
            Вы можете рассчитать стоимость беседки или каркасного дома с помощью нашего калькулятора:

          .calc-block__list
            .calc-block
              .form-group.form-short
                label.form-control(for="") Ширина:
                .select.form-control(data-select)
                  .select__current
                    span 2.3 м
                    .btn-dropdown__icon
                      img(src="images/icons/ui/select-icon.svg" alt="select dropdown item" data-select-icon)
                  ul.select__list
                    li.select__item 2.3 м
                    li.select__item 2.5 м
                    li.select__item 2.8 м
                    li.select__item 3.0 м

              .form-group.form-short
                label.form-control(for="") Длина:
                .select.form-control(data-select)
                  .select__current
                    span 1.5 м
                    .btn-dropdown__icon
                      img(src="images/icons/ui/select-icon.svg" alt="select dropdown item" data-select-icon)
                  ul.select__list
                    li.select__item 1.3 м
                    li.select__item 1.5 м
                    li.select__item 1.8 м
                    li.select__item 2.0 м

              .form-group.form-short
                label.form-control(for="") Длина:
                button.btn.btn-primary 45 мм
            .calc-block.calc-block__slider
              .calc-slider
                .calc-slider__top
                  .calc-slider__btn.calc-slider__btn--left
                    img(src="images/icons/chevron-white-left.svg" alt="")
                  ul.calc-slider__line
                    li.calc-slider__line-item
                      img.calc-slider__line-img(src="images/calculator/top/1.png" alt="image 1")
                    li.calc-slider__line-item
                      img.calc-slider__line-img(src="images/calculator/top/2.png" alt="image 2")
                    li.calc-slider__line-item
                      img.calc-slider__line-img(src="images/calculator/top/3.png" alt="image 3")
                    li.calc-slider__line-item
                      img.calc-slider__line-img(src="images/calculator/top/4.png" alt="image 4")
                    li.calc-slider__line-item
                      img.calc-slider__line-img(src="images/calculator/top/5.png" alt="image 5")
                    li.calc-slider__line-item
                      img.calc-slider__line-img(src="images/calculator/top/6.png" alt="image 6")
                  .calc-slider__btn.calc-slider__btn--right
                    img(src="images/icons/chevron-white-left.svg" alt="")

                .calc-slider__middle
                  .calc-slider__middle-left
                    .calc-slider__btn.calc-slider__btn--left
                      img(src="images/icons/chevron-white-left.svg" alt="")
                    ul.calc-slider__line
                      li.calc-slider__line-item
                        img.calc-slider__line-img(src="images/calculator/left/1.png" alt="image 1")
                      li.calc-slider__line-item
                        img.calc-slider__line-img(src="images/calculator/left/2.png" alt="image 2")
                      li.calc-slider__line-item
                        img.calc-slider__line-img(src="images/calculator/left/3.png" alt="image 3")
                      li.calc-slider__line-item
                        img.calc-slider__line-img(src="images/calculator/left/4.png" alt="image 4")
                    .calc-slider__btn.calc-slider__btn--right
                      img(src="images/icons/chevron-white-left.svg" alt="")


                  .calc-slider__middle-center
                    img.calc-slider__middle-img(src="images/calculator/main-picture.jpg" alt="")
                    button.calc-slider__middle-btn.btn(data-show-modal-2) + Крыша
                    button.calc-slider__middle-btn.btn(data-show-modal-3) + Основание

                  .calc-slider__middle-right
                    .calc-slider__btn.calc-slider__btn--left
                      img(src="images/icons/chevron-white-left.svg" alt="")
                    ul.calc-slider__line
                      li.calc-slider__line-item
                        img.calc-slider__line-img(src="images/calculator/left/1.png" alt="image 1")
                      li.calc-slider__line-item
                        img.calc-slider__line-img(src="images/calculator/left/2.png" alt="image 2")
                      li.calc-slider__line-item
                        img.calc-slider__line-img(src="images/calculator/left/3.png" alt="image 3")
                      li.calc-slider__line-item
                        img.calc-slider__line-img(src="images/calculator/left/4.png" alt="image 4")
                    .calc-slider__btn.calc-slider__btn--right
                      img(src="images/icons/chevron-white-left.svg" alt="")

                .calc-slider__bottom
                  .calc-slider__btn.calc-slider__btn--left
                    img(src="images/icons/chevron-white-left.svg" alt="")
                  ul.calc-slider__line
                    li.calc-slider__line-item
                      img.calc-slider__line-img(src="images/calculator/bottom/1.png" alt="image 1")
                    li.calc-slider__line-item
                      img.calc-slider__line-img(src="images/calculator/bottom/2.png" alt="image 2")
                    li.calc-slider__line-item
                      img.calc-slider__line-img(src="images/calculator/bottom/3.png" alt="image 3")
                    li.calc-slider__line-item
                      img.calc-slider__line-img(src="images/calculator/bottom/4.png" alt="image 4")
                    li.calc-slider__line-item
                      img.calc-slider__line-img(src="images/calculator/bottom/5.png" alt="image 5")
                    li.calc-slider__line-item
                      img.calc-slider__line-img(src="images/calculator/bottom/6.png" alt="image 6")
                  .calc-slider__btn.calc-slider__btn--right
                    img(src="images/icons/chevron-white-left.svg" alt="")

            .calc-block.calc-block__checkboxes.flex-column.align-start
              h2.calc-block__title Услуги
              .calc-block__box
                .calc-block__box-text Сборка:
                label.checkbox__label(for="sborka-1")
                  input.checkbox(type="checkbox" id="sborka-1")
                  span.checkbox__fake
                  span.checkbox__text Сборка командой домстроя (+2000р)

              .calc-block__box
                .calc-block__box-text Получение:
                label.checkbox__label(for="arrive-1")
                  input.checkbox(type="checkbox" id="arrive-1")
                  span.checkbox__fake
                  span.checkbox__text Доставка
                label.checkbox__label(for="delivery-1")
                  input.checkbox(type="checkbox" id="delivery-1" checked)
                  span.checkbox__fake
                  span.checkbox__text Самовывоз

            .calc-block.calc-block__checkboxes.flex-column.align-start
              h2.calc-block__title Дополнительно
              .calc-block__box
                label.checkbox__label(for="antiseptic-1")
                  input.checkbox(type="checkbox" id="antiseptic-1")
                  span.checkbox__fake
                  span.checkbox__text Обработка пола с одной стороны "Антисептиком"  (+ 2000р)
                label.checkbox__label(for="pokraska-1")
                  input.checkbox(type="checkbox" id="pokraska-1" checked)
                  span.checkbox__fake
                  span.checkbox__text Покраска стен с двух сторон (+ 2000р)

            .calc-block.calc-block--dark.d-flex
              .calc-block__left
                .calc-block__left-title
                  span.calc-block__price-text Цена со скидкой:
                  span.calc-block__price 51 295 ₽
                  span.calc-block__price.old-price 57 295 ₽
                ul.calc-block__left-list
                  li.calc-block__left-item
                    .calc-block__left-text Стоимость аксессуаров:
                    .calc-block__left-price 1 295 ₽
                  li.calc-block__left-item
                    .calc-block__left-text Стоимость сборки:
                    .calc-block__left-price 2 000 ₽
                  li.calc-block__left-item
                    .calc-block__left-text Стоимость доставки:
                    .calc-block__left-price 12 000 ₽
              .calc-block__right
                .calc-block__right-text Итог:
                .calc-block__right-price 51 295
                  span ₽
                button.btn.btn-warning.btn-big.btn-wide(data-show-modal-4) ОФОРМИТЬ ЗАКАЗ

      .container
        .subcatalog-work__inner.customer-work__inner.calc__inner
          h2.subcatalog-work__title.title Порядок оплаты
          ul.subcatalog-work__list
            li.subcatalog-work__item(data-step="1")
              .subcatalog-work__item-title Заключаем договор
              .subcatalog-work__item-text В офисе или дистанционно.
                br
                | Авансовая оплата 30%
              .subcatalog-work__item-round
            li.subcatalog-work__item(data-step="2")
              .subcatalog-work__item-title Доставляем материалы
              .subcatalog-work__item-text Вторая оплата до 60%
              .subcatalog-work__item-round
            li.subcatalog-work__item(data-step="3")
              .subcatalog-work__item-title Возводим строение
              .subcatalog-work__item-text Качественно и профессионально возводим постройку
              .subcatalog-work__item-round
            li.subcatalog-work__item(data-step="4")
              .subcatalog-work__item-title Вы принимаете готовую постройку
              .subcatalog-work__item-text Подписание акта приема-передачи и окончательная оплата
              .subcatalog-work__item-round

    section.section.section-abs
      .container
        .swiper.abs-slider
          .swiper-wrapper
            .swiper-slide.section-abs__inner
              img.abs-slider__img(src="images/index/abs-1.jpg" alt="")
              .abs-slider__content
                h2.abs-slider__title Мы работаем с&nbsp;
                  span.bold-text материнским капиталом!
                .abs-slider__modal
                  button.btn.btn-big-rounded Оставить заявку

            .swiper-slide.section-abs__inner
              img.abs-slider__img(src="images/index/abs-1.jpg" alt="")
              .abs-slider__content
                h2.abs-slider__title Мы работаем с
                  span.bold-text материнским капиталом!
                .abs-slider__modal
                  button.btn.btn-big-rounded Оставить заявку
          .abs-slider-pagination.swiper-pagination

  include pug/includes/footer.pug